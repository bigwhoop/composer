{
    "name": "composer/composer",
    "description": "Package Manager",
    "keywords": ["package", "dependency", "autoload"],
    "homepage": "http://getcomposer.org/",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nils Adermann",
            "email": "naderman@naderman.de",
            "homepage": "http://www.naderman.de"
        },
        {
            "name": "Jordi Boggiano",
            "email": "j.boggiano@seld.be",
            "homepage": "http://seld.be"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "symfony/console": ">2.0,<2.2-dev",
        "symfony/finder": ">2.0,<2.2-dev",
        "symfony/process": ">2.0,<2.2-dev"
    },
    "recommend": {
        "ext-zip": "*"
    },
    "autoload": {
        "psr-0": { "Composer": "../../../src/" }
    },
    "bin": ["../../../bin/composer"],
    "setup": [
        {
            "type" : "info",
            "text" : "DATABASE SETUP\n--------------"
        },
        {
            "type"     : "question",
            "question" : "Database Name:",
            "variable" : "db_name",
            "default"  : "test_db"
        },
        {
            "type"     : "question",
            "question" : "User Name:",
            "variable" : "db_user",
            "default"  : "test_usr"
        },
        {
            "type"       : "question",
            "question"   : "Password:",
            "variable"   : "db_pass",
            "validators" : [
                "notEmpty"
            ]
        },
        {
            "type" : "info",
            "text" : "Saving database config for '%db_name%' using '%db_user%' and '%db_pass%'."
        },
        {
            "type"        : "copyFile",
            "source"      : "config.php.dist",
            "destination" : "config.php"
        },
        {
            "type"   : "replacePlaceholders",
            "source" : "config.php"
        }
    ]
}
